      <button type="submit" name="button">+</button>
      <input type="text" class="input-item" placeholder="New Task" name="newItem" autocomplete="off">
    </form>

      <% for(let i=0; i<newListItems.length; i++){ %>
          <div class="item">
            <input type="checkbox">
            <p><%= newListItems[i] %> </p>
          </div>
    <%  } %>

</div>

    </div>





